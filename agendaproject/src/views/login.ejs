<%- include('includes/head') %>
<%- include('includes/nav') %>
    
<div class="container">
    <div class="row">
        <div class="col-lg-2 my-5"></div>

        <div class="col-lg-8">
            <h1 class="text-center">Login</h1>
            <p class="text-center lead">Sign in or create your account</p>
            <%- include('includes/messages'); %>

            <div class="row">

                <div class="col-lg">
                    <h4>Create your account</h4>
                    <p>If you don't have an account, complete the form below:</p>

                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email address</label>
                          <input type="email" class="form-control" name="email" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputEmail1">Password</label>
                          <input type="password" class="form-control" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary">Create my account</button>
                    </form>
                </div>
                
                <div class="col-lg">
                    <h4>Sign in, welcome back!</h4>
                    <p>If you already have an account, enter your login below: </p>

                    <form action="/login/sig-in" method="POST">
                      <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" name="email" placeholder="Enter email">
                      </div>
                      <div class="form-group">
                        <label for="exampleInputEmail1">Password</label>
                        <input type="password" class="form-control" name="password" placeholder="Password">
                      </div>
                      <button type="submit" class="btn btn-primary">Sign in</button>
                    </form>
                </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>
</div>

<%- include('includes/footer') %>
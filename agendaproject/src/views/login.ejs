<%- include('includes/head') %>
<%- include('includes/nav') %>
    
<div class="container">
    <div class="row my-3">
        <div class="col-lg-2"></div>

        <div class="col-lg-8">
            <h1 class="text-center">Login</h1>
            <p class="text-center lead">Sign in or create your account</p>
            <%- include('includes/messages'); %>

            <div class="row my-5">

                <div class="col-lg">
                    <h4>Create your account</h4>

                    <form class="form-register mt-3" action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="form-group my-2">
                          <label>Email address</label>
                          <input type="email" class="form-control my-2" name="email" placeholder="email@example.com">
                        </div>
                        <div class="form-group">
                          <label>Password</label>
                          <input type="password" class="form-control my-2" name="password" placeholder="Password">
                        </div>
                        <button type="submit" class="btn btn-primary mt-1">Create my account</button>
                    </form>
                </div>
                
                <div class="col-lg">
                    <h4>Sign in</h4>

                    <form class="form-login mt-3" action="/login/sig-in" method="POST">
                      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                      <div class="form-group my-2">
                        <label>Email address</label>
                        <input type="email" class="form-control my-2" name="email" placeholder="Enter email">
                      </div>
                      <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control my-2" name="password" placeholder="Password">
                      </div>
                      <button type="submit" class="btn btn-primary mt-1">Sign in</button>
                    </form>
                </div>
            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>
</div>

<%- include('includes/footer') %>
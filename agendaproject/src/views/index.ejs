<%- include('includes/head') %>
<%- include('includes/nav') %>
    
<div class="container">
    <div class="row">
        <div class="col-lg-2 my-5"></div>

        <div class="col-lg-8">
            <h1 class="text-center">Agenda</h1>
            <p class="text-center lead">See your contacts below</p>

            <%- include('includes/messages') %>

            <% if(!contacts.lenght > 0) { %>
            <div class="responsive-table">
                <table class="table my-3">
                    <% contact.forEach(contact => { %>
                        <tr>
                            <td><%= contact.name %></td>
                            <td><%= contact.lastName %></td>
                            <td><%= contact.email %></td>
                            <td><%= contact.phone %></td>
                            <td><a href="/contact/index/<%= contact.__id %>">Edit</a></td>
                            <td><a class="text-danger" href="/contact/delete/<%= contact.__id %>">Delete</a></td>
                        </tr>
                    <% }); %>
                </table>
            </div>
            <% } else { %>
                <p class="text-center lead">There are no contacts in your agenda.</p>
            <% } %>
        </div>
    </div>
</div>

<%- include('includes/footer') %>
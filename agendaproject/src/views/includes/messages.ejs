<% if (errors.lenght > 0) { %>
<div class="row">
    <div class="col my-3">
        <div class="alert alert-danger">
            <% errors.forEach(error => { %>
                <%= error %><br>
            <% }); %>
        </div>
    </div>
</div>
<% } %>

<% if (success.lenght > 0) { %>
    <div class="row">
        <div class="col my-3">
            <div class="alert alert-success">
                <% success.forEach(error => { %>
                    <%= error %><br>
                <% }); %>
            </div>
        </div>
    </div>
    <% } %>